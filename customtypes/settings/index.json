        "type": "Text",
        "config": {
          "label": "Site Title",
          "placeholder": ""
        }
      },
      "site_description": {
        "type": "Text",
        "config": {
          "label": "Site Description",
          "placeholder": ""
        }
      },
      "social_links": {
        "type": "Group",
        "config": {
          "label": "Social Links",
